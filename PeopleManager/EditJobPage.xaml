<local:FramedPage x:Class="PeopleManager.AddJobPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PeopleManager.View"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Add job">

    <Grid x:Name="GridContainer" Background="{StaticResource GradientBackground}">
        <Label FontSize="18" Foreground="White" Content="Job name" HorizontalAlignment="Left" Margin="180,119,0,0" VerticalAlignment="Top" Height="66" Width="97"/>
        <TextBox x:Name="tbName" Text="{Binding Name}" HorizontalAlignment="Center" Margin="0,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="236"  Height="32"/>
        <Button x:Name="btnBack" Click="btnBack_Click" BorderThickness="0" Background="Transparent" HorizontalAlignment="Left" Margin="23,24,0,0" VerticalAlignment="Top" Height="50" Width="65">
            <Image Source="/Asset/back.png" />
        </Button>
        <Button x:Name="btnCommit" Click="btnCommit_Click" Foreground="White" Background="Green" Content="Commit" HorizontalAlignment="Left" Margin="282,279,0,0" VerticalAlignment="Top" Height="73" Width="212"/>
    </Grid>
</local:FramedPage>
